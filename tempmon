#!/bin/bash

echo "===================================="
echo "ğŸ“Š System Temperature Monitor"
echo "===================================="

# CPU Temperature
echo -e "\nğŸŒ¡ï¸  CPU Temperature:"
sensors | grep -E 'Package id 0|Core [0-9]:' | awk '{print $1, $2, $3}'

# PCH (Chipset) Temperature
echo -e "\nğŸ”§ PCH (Chipset) Temperature:"
sensors | grep 'pch_cometlake-virtual-0' -A 1 | tail -n 1 | awk '{print $1, $2, $3}'

# NVMe SSD Temperature
echo -e "\nğŸ’¾ NVMe SSD Temperature:"
sensors | grep 'Composite' | awk '{print $1, $2, $3}'

# Wi-Fi Module Temperature
echo -e "\nğŸ“¡ Wi-Fi Module Temperature:"
sensors | grep 'iwlwifi' -A 1 | tail -n 1 | awk '{print $1, $2, $3}'

# GPU Temperature (NVIDIA)
echo -e "\nğŸ® GPU Temperature (NVIDIA GeForce RTX 2060):"
nvidia-smi --query-gpu=temperature.gpu --format=csv,noheader | awk '{print "GPU Temp: " $1 "Â°C"}'

echo "===================================="
